<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.coala.play_app">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_play"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_play_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.coala.play_app.PlayListActivity"></activity>
        <activity android:name="com.coala.play_app.SettingsActivity" />
        <activity android:name="com.coala.play_app.AppInfoActivity" />
        <activity android:name="com.coala.play_app.HomeActivity" />
        <activity
            android:name="com.coala.play_app.StartActivity"
            android:theme="@style/introTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-1661288676319131~9885313510"/>
    </application>

</manifest>