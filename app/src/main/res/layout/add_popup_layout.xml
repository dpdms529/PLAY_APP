<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_gravity="center"
    android:background="@drawable/popup_color">

    <RelativeLayout
        android:id="@+id/addplay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="start" />

    <TextView
        android:id="@+id/addplaytitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/addplay"
        android:layout_alignTop="@id/addplay"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:text="추가하기"
        android:fontFamily="@font/system_font"
        android:textColor="#ffffff"
        android:textSize="50sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignTop="@id/addplay"
        android:layout_alignRight="@id/addplay"
        android:layout_marginTop="21dp"
        android:layout_marginRight="29dp"
        android:layout_marginBottom="300dp"
        android:background="#00ff0000"
        android:scaleType="fitCenter"
        android:src="@drawable/close_white" />

    <EditText
        android:id="@+id/add_playname"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/addplaytitle"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        android:layout_marginTop="30dp"
        android:background="#8CFFFFFF"
        android:hint="놀이명"
        android:fontFamily="@font/system_font"
        android:textColor="#ffffff"
        android:textColorHint="@color/cardview_dark_background"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_playname"
        android:layout_marginStart="37dp"
        android:layout_marginTop="50dp"
        android:text="장소"
        android:fontFamily="@font/system_font"
        android:textColor="#ffffff"
        android:textSize="30sp" />

    <Button
        android:id="@+id/place_button"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@id/add_playname"
        android:layout_marginLeft="270dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="50dp"
        android:background="#00ff0000"
        android:text="실내"
        android:fontFamily="@font/system_font"
        android:textColor="#BFBBBB"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/place"
        android:layout_marginStart="37dp"
        android:layout_marginTop="20dp"
        android:text="비용"
        android:fontFamily="@font/system_font"
        android:textColor="#ffffff"
        android:textSize="30sp" />

    <Button
        android:id="@+id/cost_button"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@id/place_button"
        android:layout_marginLeft="270dp"
        android:layout_marginRight="50dp"
        android:fontFamily="@font/system_font"
        android:layout_marginTop="20dp"
        android:background="#00ff0000"
        android:text="무료"
        android:textColor="#BFBBBB"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cost"
        android:layout_marginStart="37dp"
        android:layout_marginTop="20dp"
        android:text="인원"
        android:fontFamily="@font/system_font"
        android:textColor="#ffffff"
        android:textSize="30sp" />

    <Button
        android:id="@+id/num_button"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@id/cost_button"
        android:layout_marginLeft="270dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:background="#00ff0000"
        android:text="혼자가능"
        android:fontFamily="@font/system_font"
        android:textColor="#BFBBBB"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/act"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/num"
        android:layout_marginStart="37dp"
        android:layout_marginTop="20dp"
        android:text="활동성"
        android:fontFamily="@font/system_font"
        android:textColor="#ffffff"
        android:textSize="30sp" />
    
  <Button
        android:id="@+id/act_button"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@id/num_button"
        android:layout_marginLeft="270dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:background="#00ff0000"
        android:text="활동적"
        android:fontFamily="@font/system_font"
        android:textColor="#BFBBBB"
        android:textSize="20sp" />

    <Button
        android:id="@+id/save_button"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/round_button"
        android:text="저장"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/system_font"
        android:textSize="25sp"
        android:layout_marginBottom="30dp"/>


</RelativeLayout>
