<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_tutorial">

    <!--    <LinearLayout-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_centerInParent="true"-->
    <!--        android:gravity="center_horizontal"-->
    <!--        android:orientation="vertical">-->

    <RelativeLayout
        android:id="@+id/page3_popup"
        android:layout_width="300dp"
        android:layout_height="450dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="50dp"
        android:layout_gravity="center"
        android:background="@drawable/popup_color">

        <TextView
            android:id="@+id/page3_addplaytitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/system_font"
            android:text="추가하기"
            android:textColor="#ffffff"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/page3_close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="21dp"
            android:layout_marginRight="29dp"
            android:layout_marginBottom="300dp"
            android:background="#00ff0000"
            android:scaleType="fitCenter"
            android:src="@drawable/close_white" />

        <TextView
            android:id="@+id/page3_add_playname"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/page3_addplaytitle"
            android:layout_marginStart="28dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="28dp"
            android:background="#8CFFFFFF"
            android:gravity="center_vertical"
            android:fontFamily="@font/system_font"
            android:hint="놀이명"
            android:textColor="#ffffff"
            android:textColorHint="@color/cardview_dark_background"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/page3_place"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/page3_add_playname"
            android:layout_marginStart="37dp"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/system_font"
            android:gravity="center_vertical"
            android:text="장소"
            android:textColor="#ffffff"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/page3_place_button"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_below="@id/page3_add_playname"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_alignTop="@id/page3_place"
            android:layout_marginRight="30dp"
            android:background="#00ff0000"
            android:fontFamily="@font/system_font"
            android:text="실내"
            android:textColor="#BFBBBB"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/page3_cost"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/page3_place"
            android:layout_marginStart="37dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/system_font"
            android:gravity="center_vertical"
            android:text="비용"
            android:textColor="#ffffff"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/page3_cost_button"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_below="@id/page3_place_button"
            android:layout_alignTop="@id/page3_cost"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:background="#00ff0000"
            android:fontFamily="@font/system_font"
            android:text="무료"
            android:textColor="#BFBBBB"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/page3_num"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/page3_cost"
            android:layout_marginStart="37dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/system_font"
            android:gravity="center_vertical"
            android:text="인원"
            android:textColor="#ffffff"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/page3_num_button"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_below="@id/page3_cost_button"
            android:layout_alignTop="@id/page3_num"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_marginRight="30dp"
            android:background="#00ff0000"
            android:fontFamily="@font/system_font"
            android:text="혼자가능"
            android:textColor="#BFBBBB"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/page3_act"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/page3_num"
            android:layout_marginStart="37dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/system_font"
            android:gravity="center_vertical"
            android:text="활동성"
            android:textColor="#ffffff"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/page3_act_button"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_below="@id/page3_num_button"
            android:layout_alignTop="@id/page3_act"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:background="#00ff0000"
            android:fontFamily="@font/system_font"
            android:text="활동적"
            android:textColor="#BFBBBB"
            android:textSize="25sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true">

            <Button
                android:id="@+id/page3_save_button"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/round_button"
                android:fontFamily="@font/system_font"
                android:text="저장"
                android:textColor="#FFFFFF"
                android:textSize="25sp" />

        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/page3_ps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/page3_popup"
        android:fontFamily="@font/system_font"
        android:text="새로운 놀이를 추가할 수 있습니다.\n카테고리 옆 글자를 눌러 변경할 수 있습니다."
        android:paddingLeft="30dp"
        android:textColor="#BE000000"
        android:textSize="20sp" />


    <!--    </LinearLayout>-->

</RelativeLayout>