<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_tutorial">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ch_capture"
        android:id="@+id/page4_listview"
        android:layout_marginTop="50dp"
        />

    <!--    <LinearLayout-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_centerInParent="true"-->
    <!--        android:gravity="center_horizontal"-->
    <!--        android:orientation="vertical">-->

    <RelativeLayout
        android:id="@+id/page4_popup"
        android:layout_width="300dp"
        android:layout_height="350dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:layout_below="@+id/page4_listview"
        android:layout_gravity="center"
        android:background="@drawable/popup_color">

        <TextView
            android:id="@+id/page4_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/page4_close"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/system_font"
            android:gravity="start"
            android:text="1일클래스"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/page4_close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="30dp"
            android:layout_marginRight="29dp"
            android:layout_marginBottom="300dp"
            android:background="#00ff0000"
            android:scaleType="fitCenter"
            android:src="@drawable/close_white" />

        <TextView
            android:id="@+id/page4_place"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="80dp"
            android:fontFamily="@font/system_font"
            android:gravity="center_vertical"
            android:text="장소"
            android:textColor="#ffffff"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/page4_place_info"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:text="실내"
            android:layout_alignTop="@id/page4_place"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_marginRight="30dp"
            android:background="#00ff0000"
            android:fontFamily="@font/system_font"
            android:textColor="#BFBBBB"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/page4_cost"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_below="@id/page4_place"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/system_font"
            android:gravity="center_vertical"
            android:text="비용"
            android:textColor="#ffffff"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/page4_cost_info"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:text="유료"
            android:gravity="center"
            android:layout_below="@id/page4_place_info"
            android:layout_alignTop="@id/page4_cost"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:background="#00ff0000"
            android:fontFamily="@font/system_font"
            android:textColor="#BFBBBB"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/page4_num"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_below="@id/page4_cost"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/system_font"
            android:gravity="center_vertical"
            android:text="인원"
            android:textColor="#ffffff"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/page4_num_info"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:text="혼자가능"
            android:gravity="center"
            android:layout_below="@id/page4_cost_info"
            android:layout_alignTop="@id/page4_num"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:background="#00ff0000"
            android:fontFamily="@font/system_font"
            android:textColor="#BFBBBB"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/page4_act"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_below="@id/page4_num"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/system_font"
            android:gravity="center_vertical"
            android:text="활동성"
            android:textColor="#ffffff"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/page4_act_info"
            android:text="비활동적"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_below="@id/page4_num_info"
            android:layout_alignTop="@id/page4_act"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:background="#00ff0000"
            android:fontFamily="@font/system_font"
            android:textColor="#BFBBBB"
            android:textSize="25sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true">

            <Button
                android:id="@+id/page4_modify_button"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/round_button"
                android:fontFamily="@font/system_font"
                android:text="수정"
                android:textColor="#FFFFFF"
                android:textSize="25sp" />

        </LinearLayout>

    </RelativeLayout>



    <TextView
        android:id="@+id/page4_ps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/page4_popup"
        android:fontFamily="@font/system_font"
        android:text="놀이목록 오른쪽 버튼을 누르면\n놀이목록의 카테고리 정보를 확인할 수 있고,\n기존에 있던 놀이 목록의 카테고리를\n변경할 수 있습니다."
        android:paddingLeft="30dp"
        android:layout_marginTop="30dp"
        android:textColor="#BE000000"
        android:textSize="20sp" />


    <!--    </LinearLayout>-->

</RelativeLayout>