<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/popup_color"
        android:gravity="start"
        android:textColor="#FFFFFF"
        android:textSize="40sp" />

    <ImageButton
        android:id="@+id/close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignTop="@id/title"
        android:layout_alignRight="@id/title"
        android:layout_marginTop="21dp"
        android:layout_marginRight="29dp"
        android:layout_marginBottom="300dp"
        android:background="#00ff0000"
        android:scaleType="fitCenter"
        android:src="@drawable/close_white" />

    <TextView
        android:id="@id/place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="장소"
        android:textColor="#000000"
        android:textSize="30dp"
        android:layout_marginStart="37dp"
        android:layout_below="@id/title"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/place_info"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="270dp"
        android:background=""
        android:layout_below="@id/title"
        android:layout_marginTop="50dp"
        android:textColor="#BFBBBB"
        android:textSize="25dp"/>

    <TextView
        android:id="@id/cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비용"
        android:textColor="#000000"
        android:textSize="30dp"
        android:layout_marginStart="37dp"
        android:layout_below="@id/place"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/cost_info"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="270dp"
        android:background=""
        android:layout_below="@id/place_info"
        android:layout_marginTop="20dp"
        android:textColor="#BFBBBB"
        android:textSize="25dp"/>

    <TextView
        android:id="@id/num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="인원"
        android:textColor="#000000"
        android:textSize="30dp"
        android:layout_marginStart="37dp"
        android:layout_below="@id/cost"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/num_info"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="270dp"
        android:background=""
        android:layout_below="@id/cost_info"
        android:layout_marginTop="20dp"
        android:textColor="#BFBBBB"
        android:textSize="25dp"/>

    <TextView
        android:id="@id/act"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="활동성"
        android:textColor="#000000"
        android:textSize="30dp"
        android:layout_marginStart="37dp"
        android:layout_below="@id/num"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/act_info"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="270dp"
        android:background=""
        android:layout_below="@id/num_info"
        android:layout_marginTop="20dp"
        android:textColor="#BFBBBB"
        android:textSize="25dp"/>


</RelativeLayout>

