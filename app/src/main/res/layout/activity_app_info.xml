<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_color"
    tools:context=".AppInfoActivity">

    <RelativeLayout
        android:id="@+id/top_tap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/darkBlue"
        android:paddingTop="10dp">


        <ImageButton
            android:id="@+id/app_info_back_button"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:adjustViewBounds="true"
            android:background="@null"
            android:padding="4dp"
            android:scaleType="fitCenter"
            android:src="@drawable/back_arrow_white" />

        <TextView
            android:id="@+id/app_info_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/system_font"
            android:gravity="center"
            android:text="앱 정보"
            android:textColor="@color/real_white"
            android:textSize="23sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/app_introduction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_tap"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/background_item">

        <TextView
            android:id="@+id/app_intro_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/system_font"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:text="앱 소개"
            android:textColor="@color/darkBlue"
            android:textSize="23sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/app_intro_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/app_intro_title"
            android:fontFamily="@font/system_font"
            android:padding="10dp"
            android:text=" 뭐하고 놀지 랜덤으로 알려주는 앱입니다."
            android:textColor="#000000"
            android:textSize="15sp" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/app_source"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_introduction"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/background_item">

        <TextView
            android:id="@+id/app_source_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/system_font"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:text="리소스 출처"
            android:textColor="@color/darkBlue"
            android:textSize="23sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/app_fontsource"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/app_source_title"
            android:fontFamily="@font/system_font"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:text="- 폰트"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/fontsource_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/app_fontsource"
            android:fontFamily="@font/system_font"
            android:paddingStart="20dp"
            android:paddingTop="10dp"
            android:text="무료글꼴 고양시 고양일산체"
            android:textColor="#272727"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/appinfo_soundsource"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fontsource_main"
            android:fontFamily="@font/system_font"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:text="- 효과음"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/soundsource_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/appinfo_soundsource"
            android:fontFamily="@font/system_font"
            android:paddingStart="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="www.youtube.com/watch?v=6DSgZq5j_kI"
            android:textColor="#000000"
            android:textSize="15sp" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/license"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_source"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/background_item">

        <TextView
            android:id="@+id/license_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/system_font"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:text="라이센스"
            android:textColor="@color/darkBlue"
            android:textSize="23sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/license_title"
            android:paddingStart="20dp"
            android:paddingTop="10dp"
            android:paddingEnd="20dp"
            android:paddingBottom="10dp"
            android:text="MIT License\n\nCopyright (c) 2020 dpdms529\n\nPermission is hereby granted, free of charge, to any person obtaining a copy of this software and associated documentation files (the \u0022Software\u0022), to deal in the Software without restriction, including without limitation the rights to use, copy, modify, merge, publish, distribute, sublicense, and/or sell copies of the Software, and to permit persons to whom the Software is furnished to do so, subject to the following conditions:\n\nThe above copyright notice and this permission notice shall be included in all copies or substantial portions of the Software.\n\nTHE SOFTWARE IS PROVIDED \u0022AS IS\u0022, WITHOUT WARRANTY OF ANY KIND, EXPRESS OR IMPLIED, INCLUDING BUT NOT LIMITED TO THE WARRANTIES OF MERCHANTABILITY, FITNESS FOR A PARTICULAR PURPOSE AND NONINFRINGEMENT. IN NO EVENT SHALL THE AUTHORS OR COPYRIGHT HOLDERS BE LIABLE FOR ANY CLAIM, DAMAGES OR OTHER LIABILITY, WHETHER IN AN ACTION OF CONTRACT, TORT OR OTHERWISE, ARISING FROM, OUT OF OR IN CONNECTION WITH THE SOFTWARE OR THE USE OR OTHER DEALINGS IN THE SOFTWARE."
            android:textColor="#000000"
            android:textSize="9sp" />


    </RelativeLayout>


    <ImageView
        android:id="@+id/coala"
        android:layout_width="49dp"
        android:layout_height="49dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/coala" />

</RelativeLayout>