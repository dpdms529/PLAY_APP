<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_color"
        tools:context=".PlayListActivity">

        <TextView
            android:id="@+id/play_list_top"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/borderline_bottom"
            android:gravity="center"
            android:text="놀이 목록"
            android:textSize="30sp" />

        <ImageButton
            android:id="@+id/play_list_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:adjustViewBounds="true"
            android:background="#00ff0000"
            android:scaleType="fitCenter"
            android:src="@drawable/back_arrow" />

        <TextView
            android:id="@+id/list_add"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_below="@id/play_list_top"
            android:layout_toRightOf="@id/list_add_btn"
            android:background="@drawable/border_line"
            android:gravity="center_vertical"
            android:text="놀이 추가"
            android:textSize="30sp" />

        <ImageButton
            android:id="@+id/list_add_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/play_list_top"
            android:layout_margin="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:adjustViewBounds="true"
            android:background="#00ff0000"
            android:scaleType="fitCenter"
            android:src="@drawable/add" />

        <TextView
            android:id="@+id/list_1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/list_add"
            android:background="@drawable/border_line"
            android:gravity="center_vertical"
            android:text=" 방탈출카페"
            android:textColor="#000000"
            android:textSize="30sp" />

        <ImageButton
            android:id="@+id/minus_1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@id/list_1"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:adjustViewBounds="true"
            android:background="#00ff0000"
            android:scaleType="fitCenter"
            android:src="@drawable/minus" />

        <ImageButton
            android:id="@+id/info_1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@id/list_1"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toLeftOf="@id/minus_1"
            android:adjustViewBounds="true"
            android:background="#00ff0000"
            android:scaleType="fitCenter"
            android:src="@drawable/info" />

        <TextView
            android:id="@+id/list_2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/list_1"
            android:background="@drawable/border_line"
            android:gravity="center_vertical"
            android:text=" 영화"
            android:textColor="#000000"
            android:textSize="30sp" />

        <ImageButton
            android:id="@+id/minus_2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@id/list_2"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:adjustViewBounds="true"
            android:background="#00ff0000"
            android:scaleType="fitCenter"
            android:src="@drawable/minus" />

        <ImageButton
            android:id="@+id/info_2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@id/list_2"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toLeftOf="@id/minus_2"
            android:adjustViewBounds="true"
            android:background="#00ff0000"
            android:scaleType="fitCenter"
            android:src="@drawable/info" />

        <TextView
            android:id="@+id/list_3"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/list_2"
            android:background="@drawable/border_line"
            android:gravity="center_vertical"
            android:text=" 전시회"
            android:textColor="#000000"
            android:textSize="30sp" />

        <ImageButton
            android:id="@+id/minus_3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@id/list_3"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:adjustViewBounds="true"
            android:background="#00ff0000"
            android:scaleType="fitCenter"
            android:src="@drawable/minus" />

        <ImageButton
            android:id="@+id/info_3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@id/list_3"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toLeftOf="@id/minus_3"
            android:adjustViewBounds="true"
            android:background="#00ff0000"
            android:scaleType="fitCenter"
            android:src="@drawable/info" />

        <TextView
            android:id="@+id/list_4"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/list_3"
            android:background="@drawable/border_line"
            android:gravity="center_vertical"
            android:text=" 책읽기"
            android:textColor="#000000"
            android:textSize="30sp" />

        <ImageButton
            android:id="@+id/minus_4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@id/list_4"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:adjustViewBounds="true"
            android:background="#00ff0000"
            android:scaleType="fitCenter"
            android:src="@drawable/minus" />

        <ImageButton
            android:id="@+id/info_4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@id/list_4"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toLeftOf="@id/minus_4"
            android:adjustViewBounds="true"
            android:background="#00ff0000"
            android:scaleType="fitCenter"
            android:src="@drawable/info" />

        <TextView
            android:id="@+id/list_5"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/list_4"
            android:background="@drawable/border_line"
            android:gravity="center_vertical"
            android:text=" 만화카페"
            android:textColor="#000000"
            android:textSize="30sp" />

        <ImageButton
            android:id="@+id/minus_5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@id/list_5"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:adjustViewBounds="true"
            android:background="#00ff0000"
            android:scaleType="fitCenter"
            android:src="@drawable/minus" />

        <ImageButton
            android:id="@+id/info_5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@id/list_5"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toLeftOf="@id/minus_5"
            android:adjustViewBounds="true"
            android:background="#00ff0000"
            android:scaleType="fitCenter"
            android:src="@drawable/info" />

        <TextView
            android:id="@+id/list_6"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/list_5"
            android:background="@drawable/border_line"
            android:gravity="center_vertical"
            android:text=" 등산"
            android:textColor="#000000"
            android:textSize="30sp" />

        <ImageButton
            android:id="@+id/minus_6"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@id/list_6"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:adjustViewBounds="true"
            android:background="#00ff0000"
            android:scaleType="fitCenter"
            android:src="@drawable/minus" />

        <ImageButton
            android:id="@+id/info_6"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@id/list_6"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toLeftOf="@id/minus_6"
            android:adjustViewBounds="true"
            android:background="#00ff0000"
            android:scaleType="fitCenter"
            android:src="@drawable/info" />

    </RelativeLayout>
</ScrollView>